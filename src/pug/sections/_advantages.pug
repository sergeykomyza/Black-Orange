section.advantages 
  .container 
    .section-titlebox
      h5.section-title.advantages__title Свежий подход
    .advantages__box 
      img.advantages__foto(src="img/img-5.webp", alt="@")
      .advantages__items 
        each item in advantages 
          .advantage 
            img.advantage__icon(src="img/svg/icon-check.svg", alt="@")
            .advantage__name= item.title 
            p.advantage__text= item.text
